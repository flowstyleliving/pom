h1(class="form-inline")
  span
    button(type="button" ng-click"pomEvent()") POM
  br
  span
    input.form-control(type="text",placeholder="I want to..." ng-model="search" ng-submit="vm.create().title")
br
br
div#main(ng-repeat="t in vm.tasks | filter: search")
    div.container.well(ng-model="isSmall")
      div.col.col-md-3
        p#color(style="background-color: {{t.color}};")
        h6 Task: 
          h6 {{t.title}}
      div.col.col-md-6
        label Due:
          p {{t.dueDate | date:'longDate'}}   
          div.confirm(ng-repeat="c in t.checknotes", style="display: inline-block;")
            input(type="checkbox" ng-model="c")
      div.col.col-m-2
        button.btn.btn-warning.transformable(ng-click="isSmall = !isSmall; showDetails = ! showDetails;") Edit
        br
        button.btn.btn-danger(ng-click="vm.remove(t)") Delete
        br
        button.btn.btn-primary(ui-sref="checknotes({ id: t._id })") checknotes
    div(ng-show="showDetails") 
      form#showDetails(ng-submit="vm.update(t)") 
        div.container.well.hello
          div.well.span3
            label Title: 
            br
            input.form-control(type="text", ng-model="t.title")
          div.well.span3
            label Date Due:
            br
            input.form-control(type="date", ng-model="t.dueDate")
          div.well.span3
            label Color: 
            br
            input.form-control(type="text", ng-model="t.color")
          div.well.span3
            h5 checkNotes:
            br
            label Done or Nah:
            input.form-control(type="checkbox", ng-model="t.checkNotes.completeOrnah")
            label Title:
            br
            input.form-control(type="text", ng-model="t.checkNotes.title")
            label dueDate:
            br
            input.form-control(type="date", ng-model="t.checkNotes.dueDate")
            label Notes:
            br
            textarea.form-control(ng-model="t.checkNotes.note")
          div(style="text-align: center")
            button.btn.btn-primary(type="submit" ng-click="isSmall = !isSmall; showDetails = ! showDetails;") +Submit+

    
